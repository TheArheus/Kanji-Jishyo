@{
    KanjiJishyo1Entities db = new KanjiJishyo1Entities();

    IEnumerable<KanjiSearch_Result> search_Result = db.KanjiSearch(ViewBag.KanjiOrValueItem, ViewBag.KanjiStrokesItem);
}

